tr.time-entry-row
  td.align-middle
    = time_entry.project.full_name
    - if time_entry.notes?
      .description.text-muted
        small= time_entry.notes
  td.amount.align-middle.text-right
    = format_distance_of_minutes time_entry.amount
  td.text-right.align-middle
    - if policy(time_entry).update?
      = link_to [:edit, current_organization, time_entry], class: 'btn btn-outline-secondary' do
        i.icon-pencil
    - if policy(time_entry).destroy?
      = link_to [current_organization, time_entry], class: 'btn btn-outline-danger ml-2', data: { method: 'delete', confirm: 'Are you sure you want to remove this entry?' } do
        i.icon-cross
